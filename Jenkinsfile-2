pipeline {
  agent any
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('rancher-key') 
  }
  stages {
  stage('Debug') {
            steps {
                sh 'echo "Workspace Directory: $WORKSPACE"'
            }
        }
    stage('One') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i inventory/my-cluster/hosts.ini --private-key=$ANSIBLE_PRIVATE_KEY site.yml'
        sh 'chmod +x install_rancher.sh'
        sh './install_rancher.sh'
        
      }
    }
  }
}
